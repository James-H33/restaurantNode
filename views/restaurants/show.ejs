<% include ../partials/header %>
<link rel="stylesheet" href="/stylesheets/show.css" media="screen" title="no title" charset="utf-8">

<div class="container">
    <div class="col">
        <img src="<%= restaurant.image %>" alt="...">
        <div class="caption">
          <div class="captionCol">
            <h3><%= restaurant.name %></h3>
          </div>
          <div class="captionCol">
            <p>
              <%= restaurant.rating %>
            </p>
          </div>
          <hr>
        </div>
    </div>

    <div class="col">
        <div class="description">
          <div id="map"></div>
          <h5><span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span> <%= restaurant.location %></h5>
          <h3>About</h3>
          <p>
            <%= restaurant.description %>
          </p>
        </div>
    </div>

    <div class="commentsContainer">
      <div class="comments">
        <h1>Comments</h1>
        <hr>
        <h5><strong>Homer</strong></h5>
        <p>
          I like this one!
        </p>
      </div>
    </div>
</div>
  <script type="text/javascript" src="../javascript/show.js"></script>
  <script src="https://maps.googleapis.com/maps/api/js?callback=initMap" async defer></script>

<% include ../partials/footer %>
